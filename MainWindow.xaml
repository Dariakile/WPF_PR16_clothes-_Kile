<Window x:Class="WPF_PR16_clothes__Kile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PR16_clothes__Kile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#fab9df">
            <Label Content="Мебель. Аксессуары для сна" Width="750" Style="{StaticResource Lab1}"/>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MyFrame" NavigationUIVisibility="Hidden"/>
        <StackPanel Grid.Row="2" Background="#fab9df"/>        
    </Grid>
</Window>
